/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #035504
background-color = #faf9f0

html, body
  font-family 'Yanone Kaffeesatz'
  background-color background-color
  color #444
  height 100%

h1
  margin 30px auto

p
  line-height 1.8

.container
  width 100%
  min-height 100%
  position absolute

.header
  color #fff
  font-size 35px
  text-align center
  width 100%
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)
  overflow hidden
  position fixed
  top 0
  height 120px

.content
  margin auto
  width 500px
  padding-bottom 30px
  a
    text-decoration none
    color #444
    &:hover
      color #444
      text-decoration underline
    &:visited
      color #444
      text-decoration none

.main-content
  margin-top 130px
  width 400px

.footer
  text-align center
  width 100%
  border-top 1px dotted #ccc
  font-size 13px
  position absolute
  bottom 0
  height 30px
  a
    text-decoration none
    color #444
    &:hover
      color #444
      text-decoration underline
    &:visited
      color #444
      text-decoration none

.postComment
  font-size 10px

.created_at
  display none

.postTitle
  text-decoration underline
  font-size 15px
